<window>
  <widget>
    <qsplitter>

      <component
        v-for="view in ['qlistview', 'qtableview', 'qtreeview']"
        :is="view"
      >
        <qstandarditemmodel :column_count="2">
          <qstandarditem
            v-for="content in items_content()"

            :text="content['text']"
            :model_index="content['model_index']"
          />

            <!-- v-bind="content" -->
        </qstandarditemmodel>
      </component>

